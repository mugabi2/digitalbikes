<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/roundcornerdt"
    android:gravity="center">

    <LinearLayout
        android:layout_width="280dp"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/roundcornerdt"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/close_popup2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:gravity="center"
            android:src="@drawable/ic_highlight_off_black_24dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/helvetica_roman"
            android:text="@string/digitaltimepacks"
            android:textColor="@color/colorAppBlue"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/hourglass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dtround"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/pocket_color_3"
                    android:fontFamily="@font/helvetica_roman"
                    android:layout_marginStart="0dp"
                    android:gravity="center"
                    android:text="@string/hourglass"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="24dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_fileName="lf30_editor_PNrU0S.json" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="107dp"
                    android:fontFamily="@font/helvetica_roman"
                    android:gravity="center"
                    android:text="1 hour\n1,000 shs"
                    android:textColor="@color/colorAppBlue"
                    android:textSize="20sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/timebucket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="0dp"
                android:background="@drawable/dtroundtb"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/cyan"
                    android:gravity="center"
                    android:text="@string/timebucket"
                    android:fontFamily="@font/helvetica_roman"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="24dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_fileName="lf30_editor_8puxpE.json" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="12 hours\n10,000 shs"
                    android:layout_marginTop="107dp"
                    android:fontFamily="@font/helvetica_roman"
                    android:textColor="@color/colorAppBlue"
                    android:textSize="20sp" />
            </FrameLayout>



        </LinearLayout>

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:id="@+id/pogback2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cpb_color="#FFee44"
            app:cpb_colors="@array/dbcolorspock"
            android:visibility="invisible"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:indeterminate="true"
            android:indeterminateOnly="false"/>

    </LinearLayout>



</LinearLayout>
